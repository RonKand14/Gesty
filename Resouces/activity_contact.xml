<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/purple"
    tools:context="com.example.Gesty.ActivityContact">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backBtn"
        android:text="Gesty"
        android:textColor="#FFF"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintTop_toBottomOf="@id/headTxt"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/illustration"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="72dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_menu"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="497dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="For any problems, suggestions or questions, contact us via the following:\n Ron: ronkand14@gmail.com\n Eli: elietin24@live.com"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

